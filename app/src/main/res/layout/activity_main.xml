<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Mand.ro"
        app:titleTextColor="@color/white"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/etIpAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="192.168.0.125"
            android:text="192.168.0.125"
            android:textColor="@color/black"
            android:inputType="text" />
        <Button
            android:id="@+id/btnGoToVRActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start VR"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"/>
        <EditText
            android:id="@+id/etIpAddress2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="192.168.0.138"
            android:text="192.168.0.138"
            android:textColor="@color/black"
            android:inputType="text" />
        <Button
            android:id="@+id/btnGoToUdpActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UDP"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>